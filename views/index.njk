{% extends "layout.njk" %} {%block content%}

<div class="mb-5 ">
    <div class="container-fluid ">
        <div class="container ">
            <div class="intro ">
                <div class="row align-items-center ">
                    <div class="col-xl-8 col-lg-8 col-md-6 col-sm-12 mb-3 ">
                        <h1>As melhores receitas</h1>
                        <p>Aprenda a construir os melhores pratos com receitas criadas por profissionais do <br> mundo inteiro.
                        </p>
                    </div>
                    <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 mb-3 ">
                        <img class="img-fluid " src="img/chef.png " alt=" ">
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<section class="mb-5 ">
    <div class="container-fluid ">

        <div class="container mb-3 ">
            <div class="row ">
                <div class="col-12 ">
                    <h2>Mais acessadas</h2>
                </div>
            </div>
        </div>

        <div class="container ">

            <div class="row ">

                {% for recipe in recipes %}
                    <div class="col-xl-4 col-lg-4 col-md-6 mb-3 recipe-item " id="{{loop.index}}">
                        <img class="img-fluid mb-2 " src="{{recipe.image}}" alt=" ">
                        <h3>{{recipe.title}}</h3>
                        <p>{{recipe.author}}</p>
                    </div>
                {% endfor %}
            </div>

        </div>
</section>


{% endblock %}