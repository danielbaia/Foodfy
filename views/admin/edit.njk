{% extends "admin/layout.njk" %}

{% block title %}
    <title>Edit Recipe</title>
{% endblock %}

{% block content%}
<section class="container">
    <div class="form-recipe">
        <form class="form-edit" action="/admin/recipes?_method=PUT" method="POST">

            <h1> Editar Receita </h1>

            {% include 'admin/fields.njk'%}

            <input type="hidden" name="id" value="{{recipe.id}}">

        </form>

        <form class="form-delete" action="/admin/recipes?_method=DELETE" method="POST">

            <button class="btn-delete" type="submit">Excluir</button>
             <input type="hidden" name="id" value="{{recipe.id}}">
        
        </form>
    </div>



</section>

{% endblock %}